<div class="outer-container contact-cont">
	<div class="container page-nav-cont">
		<h5 class="page-title">Contact</h5>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-sm-12 contact-form">
				{{#if enquirySubmitted}}
				<h3>Thanks for getting in touch.</h3>
				<a href="/work" class="nav-item"><button class="back-site-btn" type="submit" id="" data-title="Button">back</button></a>
				{{else}}
				<form method="post">
					<input type="hidden" name="action" value="contact">
					<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
						<label>Name</label>
						<input type="text" name="name.full"  class="form-control" value="{{formData.[name.full]}}">
					</div>
					<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
						<label>Email</label>
						<input type="email" name="email" class="form-control" value="{{formData.email}}">
					</div>
					<!--<div class="form-group">
						<label>Phone</label>
						<input type="text" name="phone" placeholder="" class="form-control" value="{{formData.phone}}">
					</div>
					<div class="form-group {{#if validationErrors.enquiryType}}has-error{{/if}}">
						<label>What are you contacting us about?</label>
						<select name="enquiryType" class="form-control">
							<option value=""></option>
							{{#each enquiryTypes}}
							<option value="{{value}}">{{label}}</option>
							{{/each}}
						</select>
					</div>-->
					<div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
						<label>Message</label>
						<textarea name="message" placeholder="" rows="3" class="form-control">{{formData.message}}</textarea>
					</div>
					<div class="form-actions">
						<!--<button type="submit" class="btn btn-primary">Send</button>-->
						<button class="enter-site-btn" type="submit" id="" data-title="Button">send</button>
					</div>
				</form>
				{{/if}}
			</div>
		</div>
	</div>
</div>